            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="8,0" />
            <Setter Property="Width" Value="35" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
        <Style x:Key="SideRow"  TargetType="Label">
